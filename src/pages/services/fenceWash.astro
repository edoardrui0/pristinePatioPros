<style lang="less">
	/*-- -------------------------- -->
<!--        Side by Side        -->
<--- -------------------------- -*/

	/* Mobile - 360px */
	@media only screen and (min-width: 0rem) {
		#sbs-2316 {
			padding: var(--sectionPadding);
			position: relative;

