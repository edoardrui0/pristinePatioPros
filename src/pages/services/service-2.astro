---
// Utils
import { Picture, getImage } from "astro:assets";

// Components
import BaseLayout from "@layouts/BaseLayout.astro";
import Banner from "@components/Banner/Banner.astro";
import SBS1 from "@components/ServicesPage/Layout2/SBS1.astro";
import SBS2 from "@components/ServicesPage/SBS2.astro";
import CTA from "@components/CTA/CTASimple.astro";

// Images
import landingImage from "@assets/images/landing.jpg"; // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getImage({ src: landingImage, format: "webp" });
---

<BaseLayout
	title="Services"
	description="Meta description for the page"
	heroImage={optimizedImage}
>
	<Banner title="Service 2" image={optimizedImage} />
	<SBS1 />
	<SBS2 />
	<CTA />
</BaseLayout>
