---
// Utils
import { Icon } from "astro-icon/components";
---

<!-- SERVICES -->
<ul id="services-331">
  <li class="cs-item">
    <picture class="cs-icon-wrapper">
      <Icon name="service1" width="48" height="48" aria-hidden="true" />
    </picture>
    <div class="cs-info-group">
      <span class="cs-header">Competitive Prices</span>
      <span class="cs-desc">Prices that won't break your wallet!</span>
    </div>
  </li>
  <li class="cs-item">
    <picture class="cs-icon-wrapper">
      <Icon name="service2" width="48" height="48" aria-hidden="true" />
    </picture>
    <div class="cs-info-group">
      <span class="cs-header">Local Service</span>
      <span class="cs-desc"
        >Service is provided by a local owner based in Jacksonville.</span
      >
    </div>
  </li>
  <li class="cs-item">
    <picture class="cs-icon-wrapper">
      <Icon name="service3" width="48" height="48" aria-hidden="true" />
    </picture>
    <div class="cs-info-group">
      <span class="cs-header">Top Notch Service</span>
      <span class="cs-desc"
        >Cleaning methods are carefully selected for each surface type.</span
      >
    </div>
  </li>
</ul>

<style lang="less">
  /*-- -------------------------- -->
<---          Services          -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #services-331 {
      max-width: (1280/16rem);
      padding: 0 (16/16rem);
      margin: 0 auto;
      /* makes it overlap the hero section above it, changes at 1024px */
      margin-top: (-100/16rem);
      display: flex;
      justify-content: center;
      align-items: stretch;
      flex-direction: column;
      gap: (20/16rem);
      position: relative;
      z-index: 10;

      .cs-item {
        list-style: none;
        width: 100%;
        border: 3px solid black;
        border-radius: (12/16rem);
        background-color: var(--backgroundBreakBlue);
        /* 24px - 32px top & bottom */
        /* 16px - 24px left & right */
        padding: clamp(1.5rem, 3vw, 2rem) clamp(1rem, 3.2vw, 1.5rem);
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        /* prevents padding from adding to height and width */
        box-sizing: border-box;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        gap: (16/16rem);
      }

      .cs-icon-wrapper {
        width: (80/16rem);
        height: (80/16rem);
        border-radius: 50%;
        background-color: var(--secondary);
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .cs-icon {
        width: (32/16rem);
        height: auto;
        display: block;
      }

      .cs-info-group {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }

      .cs-header {
        /* 20px - 25px */
        font-size: clamp(1.25rem, 2vw, 1.5625rem);
        line-height: 1.2em;
        font-weight: bold;
        text-align: center;
        margin-bottom: (8/16rem);
        color: var(--headerColor);
        display: block;
      }

      .cs-desc {
        /* 14px - 16px */
        font-size: clamp(0.875rem, 1.5vw, 1rem);
        line-height: 1.5em;
        text-align: center;
        color: var(--bodyTextColor);
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #services-331 {
      flex-direction: row;
    }
  }

  /* Desktop - 1024px */
  @media only screen and (min-width: 64rem) {
    #services-331 {
      margin-top: (-70/16rem);
      .cs-item {
        flex-direction: row;
        justify-content: flex-start;
        transition: transform 0.3s;
        &:hover {
          transform: translateY(-0.625rem);
        }
      }

      .cs-icon-wrapper {
        /* prevents flexbox from squishing it */
        flex: none;
      }

      .cs-info-group {
        align-items: flex-start;
      }

      .cs-header,
      .cs-desc {
        text-align: left;
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0rem) {
    body.dark-mode {
      #services-331 {
        .cs-item {
          background-color: var(--accent);
        }

        .cs-icon-wrapper {
          background-color: var(--medium);
        }

        .cs-header,
        .cs-desc {
          color: var(--bodyTextColorWhite);
        }
      }
    }
  }
</style>
